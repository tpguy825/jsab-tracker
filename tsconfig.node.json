{
	"compilerOptions": {
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"],
			"@assets/*": ["assets/*"],
			"@config/*": ["config/*"],
			"@components/*": ["src/components/*"]
		}
	},
	"include": ["vite.config.ts"]
}

